{# Resources/views/Directory/index.html.twig #}
{% extends '@EDM/layout.html.twig' %}
{% block EDM_Content %}
	<div class="row clearfix">
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<h3 class="panel-title">{{ 'DirectoryController.indexAction.title'|trans({'%name%': edmPath(parent)}, 'EDMBundle') }}</h3>
				</div>
				<table class="table table-bordered table-striped">
					<thead>
						<tr>
							<th class="col-lg-1" scope="row">{{ 'label.id'|trans({}, 'EDMBundle') }}</th>
							<th>{{ 'label.name'|trans({}, 'EDMBundle') }}</th>
							<th class="col-lg-1">{{ 'label.size'|trans({}, 'EDMBundle') }}</th>
							<th class="col-lg-2">{{ 'label.modified'|trans({}, 'EDMBundle') }}</th>
							<th class="col-lg-2" style="position: relative;">
								<span style="position:absolute; bottom:8px;">{{ 'label.actions'|trans({}, 'EDMBundle') }}</span>
								<a class="btn btn-primary pull-right" href="{{ path('edm_directory_new', {'id': parent.id|default(null) }) }}" title="{{ 'label.new'|trans({}, 'EDMBundle') }}" data-toggle="tooltip" data-placement="top"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
								{% if (parent is not null) %}<a class="btn btn-info pull-right" href="{{ path('edm_directory_index', {'id': parent.parent.id|default(null)}) }}" title="{{ 'label.close'|trans({}, 'EDMBundle') }}" data-toggle="tooltip" data-placement="top" style="margin-right: 5px;"><span class="glyphicon glyphicon-folder-close" aria-hidden="true"></span></a>{% endif %}
							</th>
						</tr>
					</thead>
					<tfoot>
						<tr>
							<th>{{ 'label.id'|trans({}, 'EDMBundle') }}</th>
							<th>{{ 'label.name'|trans({}, 'EDMBundle') }}</th>
							<th>{{ 'label.size'|trans({}, 'EDMBundle') }}</th>
							<th>{{ 'label.modified'|trans({}, 'EDMBundle') }}</th>
							<th>{{ 'label.actions'|trans({}, 'EDMBundle') }}</th>
						</tr>
					</tfoot>
					<tbody>
						{% for document in documents %}
							{% set route_prefix = document.isDirectory() ? 'edm_directory' : 'edm_document' %}
							<tr>
								<th scope="row">{{ document.id }}</th>
								<td>{{ document.name }}</td>
								<td class="text-right">{{ edmSize(document) }}</td>
								<td class="text-right">{{ document.updatedAt|default(document.createdAt)|date }}</td>
								<td>
									<a class="btn btn-default" href="{{ path(route_prefix ~ '_edit', {'id': document.id}) }}" title="{{ 'label.edit'|trans({}, 'EDMBundle') }}" data-toggle="tooltip" data-placement="top"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
									<a class="btn btn-danger" href="{{ path(route_prefix ~ '_delete', {'id': document.id}) }}" title="{{ 'label.delete'|trans({}, 'EDMBundle') }}" data-toggle="tooltip" data-placement="top"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
									<a class="btn btn-success" href="{{ path(route_prefix ~ '_move', {'id': document.id}) }}" title="{{ 'label.move'|trans({}, 'EDMBundle') }}" data-toggle="tooltip" data-placement="top"><span class="glyphicon glyphicon-move" aria-hidden="true"></span></a>
										{% if (document.isDirectory()) %}
										<div class="btn-group">
											<button class="btn btn-info dropdown-toggle" type="button" id="actions{{ document.id }}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
												<span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
												<span class="caret"></span>
											</button>
											<ul class="dropdown-menu" aria-labelledby="actions{{ document.id }}">
												<li><a href="{{ path('edm_directory_index', {'id': document.id}) }}"><span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span> {{ 'label.open'|trans({}, 'EDMBundle') }}</a></li>
												<li class="divider" role="separator"></li>
												<li><a href="{{ path('edm_directory_new', {'id': document.id}) }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> {{ 'label.new'|trans({}, 'EDMBundle') }}</a></li>
												<li><a href="{{ path('edm_document_upload', {'id': document.id}) }}"><span class="glyphicon glyphicon-open" aria-hidden="true"></span> {{ 'label.upload'|trans({}, 'EDMBundle') }}</a></li>
											</ul>
										</div>
									{% endif %}
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
