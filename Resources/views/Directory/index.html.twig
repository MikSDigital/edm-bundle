{# Resources/views/Directory/index.html.twig #}
{% extends '@EDM/layout.html.twig' %}
{% block EDM_Content %}
	<div class="row clearfix">
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<h3 class="panel-title text-uppercase">{{ 'DirectoryController.indexAction.title'|trans({'%name%': edmRelativePath(parent)}, 'EDMBundle') }}</h3>
				</div>
				<table class="table table-bordered table-striped">
					<thead>
						<tr>
							<th class="col-lg-1" scope="row">{{ 'label.id'|trans({}, 'EDMBundle') }}</th>
							<th class="col-lg-2">{{ 'label.parent'|trans({}, 'EDMBundle') }}</th>
							<th>{{ 'label.name'|trans({}, 'EDMBundle') }}</th>
							<th class="col-lg-2" style="position: relative;">
								<span style="position:absolute; bottom:8px;">{{ 'label.actions'|trans({}, 'EDMBundle') }}</span>
								<a class="btn btn-primary pull-right" href="{{ path('edm_directory_new') }}" title="{{ 'label.new'|trans({}, 'EDMBundle') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> {{ 'label.new'|trans({}, 'EDMBundle') }}</a>
								{% if (parent is not null) %}<a class="btn btn-info pull-right" href="{{ path('edm_directory_index', {'id': parent.parent.id|default(null)}) }}" title="{{ 'label.close'|trans({}, 'EDMBundle') }}" style="margin-right: 5px;"><span class="glyphicon glyphicon-folder-close" aria-hidden="true"></span> {{ 'label.close'|trans({}, 'EDMBundle') }}</a>{% endif %}
							</th>
						</tr>
					</thead>
					<tfoot>
						<tr>
							<th>{{ 'label.id'|trans({}, 'EDMBundle') }}</th>
							<th>{{ 'label.parent'|trans({}, 'EDMBundle') }}</th>
							<th>{{ 'label.name'|trans({}, 'EDMBundle') }}</th>
							<th>{{ 'label.actions'|trans({}, 'EDMBundle') }}</th>
						</tr>
					</tfoot>
					<tbody>
						{% for directory in directories %}
							<tr>
								<th scope="row">{{ directory.id }}</th>
								<td>{{ directory.parent.name|default('') }}</td>
								<td>{{ directory.name }}</td>
								<td>
									<a class="btn btn-primary" href="{{ path('edm_directory_new', {'id': directory.id}) }}" title="{{ 'label.new'|trans({}, 'EDMBundle') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
									<a class="btn btn-default" href="{{ path('edm_directory_edit', {'id': directory.id}) }}" title="{{ 'label.edit'|trans({}, 'EDMBundle') }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
									<a class="btn btn-danger" href="{{ path('edm_directory_delete', {'id': directory.id}) }}" title="{{ 'label.delete'|trans({}, 'EDMBundle') }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
									<a class="btn btn-info" href="{{ path('edm_directory_index', {'id': directory.id}) }}" title="{{ 'label.open'|trans({}, 'EDMBundle') }}"><span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span></a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
