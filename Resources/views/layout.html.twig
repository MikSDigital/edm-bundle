{# Resources/views/layout.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link href="{{ asset('bundles/edm/bootstrap-3.3.7/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
		<title>webeweb/edm-bundle</title>
    </head>
    <body style="padding-top: 70px;">
		<nav class="navbar navbar-inverse navbar-fixed-top">
			<div class="container-fluid">
				<div class="navbar-header">
					<button class="navbar-toggle collapsed" type="button" data-target="#bs-edmbundle-navbar-collapse" data-toggle="collapse" aria-expanded="false">
						<span class="sr-only">{{ 'label.toggle_navigation'|trans({}, 'EDMBundle') }}</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="#">EDMBundle</a>
				</div>
				<div class="navbar-collapse collapse" id="bs-edmbundle-navbar-collapse">
					<ul class="nav navbar-nav">
						<li{{ app.request.get('_route') == 'edm_directory_index' ? ' class="active"' : '' }}><a href="{{ path('edm_directory_index') }}">{{ 'label.directories'|trans({}, 'EDMBundle') }} <span class="sr-only">(current)</span></a></li>
						<li{{ app.request.get('_route') == 'edm_document_index' ? ' class="active"' : '' }}><a href="#">{{ 'label.documents'|trans({}, 'EDMBundle') }}</a></li>
					</ul>
				</div>
			</div>
		</nav>
		<section class="content">
			<div class="container-fluid">
				{% for key, messages in app.session.flashbag.all() %}
					{% for message in messages %}
						<div class="{{ key }}">{{ message }}</div>
					{% endfor %}
				{% endfor %}
				{% block EDM_Content %}
				{% endblock %}
			</div>
		</section>
		<script href="{{ asset('bundles/edm/bootstrap-3.3.7/js/bootstrap.min.js') }}" rel="stylesheet" type="text/javascript"></script>
    </body>
</html>
