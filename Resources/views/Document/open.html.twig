{# Resources/views/Document/open.html.twig #}
{% extends '@EDM/layout.html.twig' %}
{% block edmContentContainer %}
    <div class="row clearfix" style="margin:4px 0 24px 0;">
        <div class="btn-toolbar" role="toolbar">
            <div class="btn-group" role="group">
                <a class="btn btn-default" href="{{ path('edm_directory_open') }}" title="{{ 'label.home'|trans({}, 'EDMBundle') }}" data-toggle="tooltip" data-placement="top"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></a>
                    {% for path in directory.paths|default([]) %}
                    <a class="btn btn-default" href="{{ path('edm_directory_open', {'id': path.id }) }}" title="{{ 'label.open'|trans({}, 'EDMBundle') ~ ' ' ~ path.filename }}" data-toggle="tooltip" data-placement="top"><span class="glyphicon glyphicon-folder-{{ loop.last ? 'open' : 'close' }}" aria-hidden="true"></span> {{ path.filename }}</a>
                {% endfor %}
            </div>
            <div class="btn-group pull-right" role="group">
                {% if (directory is not null) %}<a class="btn btn-default" href="{{ path('edm_directory_open', {'id': directory.parent.id|default(null)}) }}" title="{{ 'label.close'|trans({}, 'EDMBundle') }}" data-toggle="tooltip" data-placement="top"><span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></a>{% endif %}
                <a class="btn btn-default" href="{{ path('edm_directory_new', {'id': (directory is not null ? directory.id : directory)}) }}" title="{{ 'label.new'|trans({}, 'EDMBundle') }}" data-toggle="tooltip" data-placement="top"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
                <a class="btn btn-default" href="{{ path('edm_document_upload', {'id': (directory is not null ? directory.id : directory)}) }}" title="{{ 'label.upload'|trans({}, 'EDMBundle') }}" data-toggle="tooltip" data-placement="top"><span class="glyphicon glyphicon-open" aria-hidden="true"></span></a>
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-default">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th class="col-lg-1" scope="row">{{ 'label.id'|trans({}, 'EDMBundle') }}</th>
                            <th>{{ 'label.name'|trans({}, 'EDMBundle') }}</th>
                            <th class="col-lg-1">{{ 'label.size'|trans({}, 'EDMBundle') }}</th>
                            <th class="col-lg-2">{{ 'label.modified'|trans({}, 'EDMBundle') }}</th>
                            <th class="col-lg-2">{{ 'label.actions'|trans({}, 'EDMBundle') }}</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>{{ 'label.id'|trans({}, 'EDMBundle') }}</th>
                            <th>{{ 'label.name'|trans({}, 'EDMBundle') }}</th>
                            <th>{{ 'label.size'|trans({}, 'EDMBundle') }}</th>
                            <th>{{ 'label.modified'|trans({}, 'EDMBundle') }}</th>
                            <th>{{ 'label.actions'|trans({}, 'EDMBundle') }}
                        </tr>
                    </tfoot>
                    <tbody>
                        {% for document in documents %}
                            {% set route_prefix = document.isDirectory() ? 'edm_directory' : 'edm_document' %}
                            <tr>
                                <th scope="row">{{ document.id }}</th>
                                <td>{{ edmLink(document) }}</td>
                                <td class="text-right">{{ edmSize(document) }}</td>
                                <td class="text-right">{{ document.updatedAt|default(document.createdAt)|date }}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-default" href="{{ path(route_prefix ~ '_edit', {'id': document.id}) }}" title="{{ 'label.edit'|trans({}, 'EDMBundle') }}" data-toggle="tooltip" data-placement="top"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                                        <a class="btn btn-danger" href="{{ path(route_prefix ~ '_delete', {'id': document.id}) }}" title="{{ 'label.delete'|trans({}, 'EDMBundle') }}" data-toggle="tooltip" data-placement="top"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                                        <a class="btn btn-warning" href="{{ path(route_prefix ~ '_move', {'id': document.id}) }}" title="{{ 'label.move_to'|trans({}, 'EDMBundle') }}" data-toggle="tooltip" data-placement="top"><span class="glyphicon glyphicon-move" aria-hidden="true"></span></a>
                                        <a class="btn btn-success" href="{{ path(route_prefix ~ '_download', {'id': document.id}) }}" title="{{ 'label.download'|trans({}, 'EDMBundle') }}" data-toggle="tooltip" data-placement="top" target="_blank"><span class="glyphicon glyphicon-save" aria-hidden="true"></span></a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
