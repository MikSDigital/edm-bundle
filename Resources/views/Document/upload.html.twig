{# Resources/views/Document/upload.html.twig #}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% extends '@EDM/layout.html.twig' %}
{% block edmContentContainer %}
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            {{ form_start(form) }}
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ ('DocumentController.uploadAction.title')|trans({'%name%': edmPath(document.parent)}, 'EDMBundle') }}</h3>
                </div>
                <div class="panel-body">
                    <div class="row clearfix">
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                            {{ form_row(form.upload) }}
                        </div>
                    </div>
                </div>
                <div class="panel-body pull-right">
                    {{ bootstrapButtonDefault({'icon': 'remove', 'content': 'label.cancel'|trans({}, 'EDMBundle')})|bootstrapButtonLink(path('edm_directory_open', {'id': document.parent.id|default(null)})) }}
                    {{ bootstrapButtonPrimary({'icon': 'ok', 'content': 'label.submit'|trans({}, 'EDMBundle')})|bootstrapButtonSubmit }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

